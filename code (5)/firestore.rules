rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isAdmin() {
      return request.auth.token.role == 'admin';
    }
    
    function isUser() {
      return request.auth.token.role == 'user';
    }
    
    function isDriver() {
      return request.auth.token.role == 'driver';
    }
    
    function isOwnDocument() {
      return request.auth.uid == resource.data.id;
    }
    
    // Users collection
    match /users/{userId} {
      allow read: if isAdmin() || request.auth.uid == userId;
      allow create: if isUser() && request.auth.uid == userId;
      allow update: if isAdmin() || request.auth.uid == userId;
      allow delete: if isAdmin();
      
      match /notifications/{notificationId} {
        allow read: if request.auth.uid == userId;
        allow create: if isAdmin();
        allow update: if request.auth.uid == userId;
        allow delete: if request.auth.uid == userId;
      }
    }
    
    // Drivers collection
    match /drivers/{driverId} {
      allow read: if isAdmin() || request.auth.uid == driverId || isUser();
      allow create: if isDriver() && request.auth.uid == driverId;
      allow update: if isAdmin() || request.auth.uid == driverId;
      allow delete: if isAdmin();
    }
    
    // Rides collection
    match /rides/{rideId} {
      allow read: if isAdmin() || resource.data.userId == request.auth.uid || resource.data.driverId == request.auth.uid;
      allow create: if isUser() && request.auth.uid == request.resource.data.userId;
      allow update: if isAdmin() || resource.data.userId == request.auth.uid || resource.data.driverId == request.auth.uid;
      allow delete: if isAdmin();
    }
    
    // Driver locations - Real-time updates
    match /driver_locations/{driverId} {
      allow read: if isAdmin() || isUser() || request.auth.uid == driverId;
      allow write: if request.auth.uid == driverId;
    }
    
    // Payments
    match /payments/{paymentId} {
      allow read: if isAdmin() || resource.data.userId == request.auth.uid;
      allow create: if isUser() && request.auth.uid == request.resource.data.userId;
      allow update: if isAdmin() || resource.data.userId == request.auth.uid;
      allow delete: if isAdmin();
    }
    
    // Analytics - Admin only
    match /analytics/{analyticsId} {
      allow read: if isAdmin();
      allow write: if isAdmin();
    }
    
    // Support tickets
    match /support/{ticketId} {
      allow read: if isAdmin() || resource.data.userId == request.auth.uid;
      allow create: if request.auth.uid == request.resource.data.userId;
      allow update: if isAdmin() || resource.data.userId == request.auth.uid;
    }
  }
}
